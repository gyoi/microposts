<%# ファイルアップロードのためmutilpartオプションを有効%>
<%= form_for(@micropost , html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "あなたも一緒にぎょい～と・・・" %>
  </div>
  <%= f.submit "ぎょい～と", class: "btn btn-success" %><br>
  
  <span class="picture">
    <%# 画像アップロード用f.Formヘルパ(f.file_field)。バリデーション追加。%>
    <b>お宝画像献上機能</b><%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: "btn btn-primary"%>
  </span>
<% end %>
<%#>画像サイズをjQueryでチェックする<%>
<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 1) {
      alert('Maximum file size is 1MB. Please choose a smaller file.');
    }
  });
</script>
